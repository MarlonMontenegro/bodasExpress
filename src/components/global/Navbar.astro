---
const whatsappNumber = "77903656";
const whatsappMsg = encodeURI("Hola, Quiero Cotizar una Boda");
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${whatsappMsg}`;
---

<header class=" top-0 z-50">
  <!-- barra normal -->
  <div class="w-full bg-white border-b border-black/10">
    <div class="mx-auto max-w-[1400px] px-6">
      
      <nav class="flex items-center justify-between h-20">

        <!-- Logo -->
        <a href="#inicio" class="logo logo-hover text-2xl md:text-4xl text-black">
          BodasExpress
        </a>

        <!-- Links desktop -->
        <ul class="hidden md:flex items-center gap-10 text-base font-medium text-slate-700">
          
          <li>
            <a href="#servicios"
               class="relative py-2 transition hover:text-pink-600
                      after:absolute after:left-0 after:-bottom-1
                      after:h-[2px] after:w-0 after:bg-pink-600
                      after:transition-all hover:after:w-full">
              Servicios
            </a>
          </li>

          <li>
            <a href="#contacto"
               class="relative py-2 transition hover:text-pink-600
                      after:absolute after:left-0 after:-bottom-1
                      after:h-[2px] after:w-0 after:bg-pink-600
                      after:transition-all hover:after:w-full">
              Contacto
            </a>
          </li>

        </ul>

        <!-- Acciones -->
        <div class="flex items-center gap-3">
          <a
            href={whatsappLink}
            target="_blank"
            rel="noopener"
            class="hidden md:inline-flex items-center gap-2 bg-[#25D366] text-white px-6 py-2.5 rounded-full text-sm font-semibold hover:bg-[#1ebe5d] transition"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24"
              fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
              <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1" />
            </svg>
            Cotiza por WhatsApp
          </a>

          <!-- Menu móvil -->
          <button
            id="menuBtn"
            class="md:hidden h-11 w-11 flex items-center justify-center rounded-md hover:bg-slate-100 transition"
            aria-label="Abrir menú"
            aria-expanded="false"
          >
            ☰
          </button>
        </div>
      </nav>

      <!-- Menú móvil -->
      <div id="mobileMenu" class="md:hidden hidden pb-4">
        <div class="mt-2 rounded-lg bg-white shadow ring-1 ring-black/5 overflow-hidden">
          <a href="#servicios" class="block px-6 py-4 text-base hover:bg-slate-50">Servicios</a>
          <a href="#contacto" class="block px-6 py-4 text-base hover:bg-slate-50">Contacto</a>

          <div class="px-6 py-4">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener"
              class="block text-center bg-[#25D366] text-white px-6 py-3 rounded-full font-semibold hover:bg-[#1ebe5d]"
            >
              Cotiza por WhatsApp
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</header>
