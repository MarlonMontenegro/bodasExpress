---
const whatsappNumber = "77903656";
const whatsappMsg = encodeURI("Hola, Quiero Cotizar una Boda");
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${whatsappMsg}`;
import bodaImg from "../../assets/novia.png"; 


const {
  title = "Boda Civil con Paquete Express ",
  description = "Te acompañamos en cada paso para que tu boda sea sencilla, elegante y sin complicaciones.",
  features = [
  "Local decorado para la ceremonia",
  "Sillas decoradas",
  "Abogado incluido",
  "Atención personalizada",
  "Asesoría gratuita",
  "Respuesta inmediata"
  ],
  buttonText = "Reserva tu fecha ahora",
  imageAlt = "Bodas Express"
} = Astro.props;
---

<section class="w-full py-14 md:py-20 bg-white">
  <div class="mx-auto max-w-[1400px] px-6">
    <div class="rounded-3xl border border-black/5 bg-gradient-to-b from-slate-50 to-white shadow-[0_25px_60px_-40px_rgba(0,0,0,.25)] overflow-hidden">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 p-8 md:p-12 items-center">

        <!-- Imagen -->
        <div class="rounded-2xl overflow-hidden bg-white shadow-sm border border-black/5">
<img
  src={bodaImg.src}
  alt={imageAlt}
  class="h-[320px] md:h-[420px] w-full object-cover"
  loading="lazy"
/>
        </div>

        <!-- Contenido -->
        <div>
          <h2 class="text-slate-900 text-3xl md:text-5xl font-semibold leading-tight tracking-tight font-serif">
            {title}
          </h2>

          <p class="mt-4 text-slate-600 text-base md:text-lg leading-relaxed max-w-xl">
            {description}
          </p>

          <!-- Checks en 2 columnas -->
          <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-x-10 gap-y-4 text-slate-700">
            {features.map((item : any) => (
              <div class="flex items-center gap-3">
                <!-- Tabler: circle-check -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-900/80 flex-shrink-0"
                  viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"
                  stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2a10 10 0 1 0 10 10a10 10 0 0 0 -10 -10z" />
                  <path d="M9 12l2 2l4 -4" />
                </svg>
                <span class="text-sm md:text-base">{item}</span>
              </div>
            ))}
          </div>

          <!-- CTA -->
          <div class="mt-10 flex flex-col sm:flex-row items-start sm:items-center gap-4">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-3 bg-[#25D366] text-white px-7 py-4 rounded-full text-base font-semibold hover:bg-[#1ebe5d] transition shadow-md"
            >
              <!-- Tabler WhatsApp -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6"
                viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8"
                stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
                <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1" />
              </svg>
              {buttonText}
            </a>
          </div>

        </div>

      </div>
    </div>
  </div>
</section>
